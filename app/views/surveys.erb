<h1>Here are the Surveys:</h1>

<% @surveys.each do |survey| %>
<ul>
  <li><a href="/survey/<%= survey.id %>"><%= survey.title %></a></li>
</ul>
<% end %>

<table>
  <tr>
    <th>Survey Name</th>
    <th>Created By</th>
  </tr>
